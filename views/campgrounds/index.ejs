<% layout('layouts/boilerplate') %>
  <h1>All campgrounds</h1>
  <div>
    <a href="/campgrounds/new">add new campground</a>
  </div>
  
    <% for(let camp of campgrounds) { %>
      <div class="card">
        <div class="row">
          <div class="col-md-4">
            <img src="<%= camp.image %>" alt="" class="img-fluid">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5><a href="/campgrounds/<%= camp._id %>"><%= camp.title %></a></h5>
              <p class='card-text'><%= camp.description%> </p>
            </div>
          </div>
        </div>
      </div>
      <!-- <a href="/campgrounds/<%= camp._id %>"><%= camp.title %></a>  -->
      <% } %>
  
