<% layout('layouts/boilerplate') %>
<div id="map" style="width:100%; height: 500px; "></div>
  <h1>All campgrounds</h1>
  <div>
    <a href="/campgrounds/new">add new campground</a>
  </div>
  
    <% for(let camp of campgrounds) { %>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <img src="<%= camp.images[0].url %>" alt="" class="img-fluid">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5><%= camp.title %></h5>
              <p class='card-text'><%= camp.description%> </p>
              <p class="card-text"><small class='text-muted'><%=camp.location %></small></p>
              <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View detail</a>
            </div>
          </div>
          <div>

          </div>
        </div>
      </div>
      
      <% } %>
  
  
  <script>
    const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
  </script>
